@model IEnumerable<DangKyKhamBenh.Models.ViewModels.BenhNhan>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Quản lý bệnh nhân";
    ViewBag.Active = "Patients";
}

<style>
    .card-style {
        background: #fff;
        padding: 10px 22px;
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    }

    .tbl-patient .text-enc {
        max-width: 190px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-family: Consolas, monospace;
        font-size: 0.85rem;
    }

    .tbl-patient .col-name {
        max-width: 220px;
    }

    .tbl-patient .col-contact {
        max-width: 230px;
    }

    table tbody tr:hover {
        background-color: #f3f6ff !important;
        transition: 0.15s;
    }

    .action-btns .btn {
        min-width: 70px;
    }

    .table th {
        font-weight: 600;
        background: #f1f3f5 !important;
    }
</style>

<div class="card-style mb-4">
    <div class="d-flex justify-content-between align-items-center">

        <a class="btn btn-outline-secondary" href="@Url.Action("Home", "Admin")">←</a>

        <form class="d-flex gap-2" method="get" action="@Url.Action("Patients", "Admin")">
            <div class="input-group">
                <input name="kw" class="form-control border-start" style="width:350px" placeholder="Tìm mã BN, họ tên, username..." value="@Request["kw"]" />
                <button class="btn btn-primary px-4">Tìm</button>
            </div>
            
        </form>
        
    </div>
</div>



<div class="card-style">

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle tbl-patient mb-0">
            <thead>
                <tr>
                    <th style="width:90px;">Mã BN</th>
                    <th class="col-name">Họ tên</th>
                    <th style="width:140px;">Username</th>
                    <th class="col-contact">Liên hệ</th>
                    <th style="width:115px;">Ngày sinh</th>
                    <th style="width:110px;">Trạng thái</th>
                    <th style="width:260px;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>
                            <span class="badge bg-light text-dark border px-3 py-2">
                                @b.BN_MaBenhNhan
                            </span>
                        </td>

                        <td class="col-name">
                            <div class="fw-semibold text-enc" title="@b.ND_HoTen">
                                @b.ND_HoTen
                            </div>
                            <div class="text-muted small text-enc" title="@b.ND_DiaChiThuongChu">
                                @b.ND_DiaChiThuongChu
                            </div>
                        </td>

                        <td>
                            <span class="text-enc" title="@b.UserName">@b.UserName</span>
                        </td>

                        <td class="col-contact">
                            <div class="text-enc" title="@b.ND_SoDienThoai">@b.ND_SoDienThoai</div>
                            <div class="text-muted small text-enc" title="@b.ND_Email">@b.ND_Email</div>
                        </td>

                        <td>@(b.ND_NgaySinh?.ToString("dd/MM/yyyy"))</td>

                        <td>
                            @if (b.TrangThai?.ToUpper() == "ACTIVE")
                            {
                                <span class="badge bg-success px-3 py-2">ACTIVE</span>
                            }
                            else if (b.TrangThai?.ToUpper() == "LOCKED")
                            {
                                <span class="badge bg-danger px-3 py-2">LOCKED</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary px-3 py-2">@b.TrangThai</span>
                            }
                        </td>

                        <td>
                            <div class="action-btns d-flex flex-wrap gap-2">

                                <!-- Nút Sửa với xác nhận -->
                                <a class="btn btn-sm btn-outline-primary" href="@Url.Action("EditPatient", "Admin", new { id = b.BN_MaBenhNhan })" onclick="return confirmAction('Bạn có chắc chắn muốn sửa thông tin bệnh nhân này?');">
                                    Sửa
                                </a>

                                <!-- Nút Khóa với xác nhận -->
                                @using (Html.BeginForm("TogglePatientStatus", "Admin", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@b.BN_MaBenhNhan" />
                                    <button class="btn btn-sm btn-outline-warning" type="submit" onclick="return confirmAction('Bạn có chắc chắn muốn thay đổi trạng thái tài khoản của bệnh nhân này?');">
                                        @if (b.TrangThai?.ToUpper() == "ACTIVE")
                                        {
                                            <span>Khóa</span>
                                        }
                                        else
                                        {
                                            <span>Mở</span>
                                        }
                                    </button>
                                }

                                <!-- Nút Xóa với xác nhận -->
                                @using (Html.BeginForm("DeletePatient", "Admin", FormMethod.Post, new { onsubmit = "return confirmAction('Bạn có chắc chắn muốn xóa bệnh nhân này và toàn bộ dữ liệu liên quan?');" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@b.BN_MaBenhNhan" />
                                    <button class="btn btn-sm btn-outline-danger" type="submit">Xóa</button>
                                }

                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

    

</div>
<script>
    // Hàm xác nhận cho các hành động như Sửa, Khóa, Xóa
    function confirmAction(message) {
        return confirm(message);
    }

</script>