@model IEnumerable<DangKyKhamBenh.Models.Khoa>

@{
    ViewBag.Title = "Danh sách các khoa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4 text-center fw-bold text-primary">@ViewBag.Title</h2>

<style>
    body {
        background: #f5f7fa;
    }

    /* Container */
    .table-container {
        padding: 25px;
        background: #ffffff;
        border-radius: 14px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.08);
        animation: fadeIn .4s ease;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(12px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Table */
    .table thead {
        background: linear-gradient(45deg, #0d6efd, #4ea1ff);
        color: #fff;
        font-weight: bold;
    }

    .table th, .table td {
        padding: 14px 12px;
        vertical-align: middle;
    }

    .table tbody tr {
        background: #fff;
        transition: 0.25s ease;
    }

    .table tbody tr:hover {
        background: #eef5ff;
        transform: scale(1.005);
    }

    /* Back button */
    .back-btn {
        background: #f1f3f5;
        border: 1px solid #dcdcdc;
        padding: 6px 14px;
        border-radius: 6px;
        color: #333;
        text-decoration: none;
        margin-bottom: 15px;
        display: inline-block;
        transition: .25s ease;
    }
    .back-btn:hover {
        background: #e2e6ea;
        transform: translateX(-3px);
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 12px;
    }

    .btn-action {
        width: 38px;
        height: 38px;
        border-radius: 50%;
        color: #fff !important;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 18px;
        transition: .25s ease;
        text-decoration: none !important;
    }

    .btn-edit { background: #ffc107; }
    .btn-edit:hover { background: #d39e00; transform: translateY(-2px); }

    .btn-delete { background: #dc3545; }
    .btn-delete:hover { background: #b31d28; transform: translateY(-2px); }
</style>


<a class="back-btn" href="@Url.Action("Home", "Admin")">← Quay lại</a>

<div class="table-container">
    <table class="table table-bordered table-hover align-middle">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên</th>
                <th>Số Điện thoại</th>
                <th>Email</th>
                <th>Trưởng phòng</th>
                <th>Số Lượng Nhân Viên</th>
                <th class="text-center">Hành Động</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.K_MaKhoa</td>
                    <td>@item.K_TenKhoa</td>
                    <td>@item.K_SoDienThoai</td>
                    <td>@item.K_Email</td>
                    <td>@item.K_TruongKhoa</td>
                    <td>@item.K_SoLuongNhanVien</td>

                    <td class="action-buttons">
                        <a href="@Url.Action("EditDepartment", new { id = item.K_MaKhoa })"
                           class="btn-action btn-edit" title="Edit">
                            ✏️
                        </a>

                        <a href="@Url.Action("DeleteDepartment", new { id = item.K_MaKhoa })"
                           class="btn-action btn-delete" title="Delete">
                            🗑️
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
