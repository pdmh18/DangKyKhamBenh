@model IEnumerable<DangKyKhamBenh.Models.ViewModels.BacSi>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Quản lý bác sĩ";
    ViewBag.Active = "Doctors";
}

<style>
    .truncate-1 {
        max-width: 180px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Hiệu ứng hover dòng */
    table tbody tr:hover {
        background-color: #f5f7ff !important;
        transition: 0.15s;
    }

    /* Cải thiện header */
    .table th {
        background: #f0f2f5 !important;
        font-weight: 600;
    }

    .action-btns .btn {
        min-width: 68px;
    }

    .card-style {
        background: #fff;
        padding: 15px 20px;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    }

    .row.g-3 .col-md-auto {
        display: flex;
        justify-content: flex-start;
        gap: 10px;
    }


    .input-group input {
        width: 100%;
        max-width: 800px;
    }

    .col-md {
        flex: 1;
    }
</style>

<div class="card-style mb-3">
    <div class="row g-5 align-items-center mb-2">
        <!-- Nút Quay lại -->
        <div class="col-md-auto d-flex justify-content-start">
            <a class="btn btn-outline-secondary" href="@Url.Action("Home", "Admin")">←</a>
        </div>

        <!-- Thanh Tìm kiếm -->
        <div class="col-md d-flex justify-content-start">
            <form class="d-flex gap-2 w-100" method="get" action="@Url.Action("Doctors","Admin")">
                <div class="input-group w-100">
                    <input name="kw" class="form-control border-start" placeholder="Tìm mã BS, họ tên, username..." value="@Request["kw"]" />
                    <button class="btn btn-primary px-4">Tìm</button>
                </div>
            </form>
        </div>

        <div class="col-md-auto d-flex justify-content-end">
            <a class="btn btn-success px-4" href="@Url.Action("CreateDoctor", "Admin")" onclick="return confirmCreateDoctor();">
                + Tạo bác sĩ
            </a>
        </div>
    </div>
</div>


<div class="card-style">

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th>Mã BS</th>
                    <th>Họ tên</th>
                    @*<th class="d-none d-md-table-cell">Chuyên khoa</th>*@
                    <th class="d-none d-lg-table-cell">Chức danh</th>
                    <th class="text-center d-none d-lg-table-cell">Năm KN</th>
                    <th>UserName</th>
                    <th>Trạng thái</th>
                    <th class="d-none d-md-table-cell">Liên hệ</th>
                    <th style="width:230px;">Thao tác</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var d in Model)
                {
                    <tr>
                        <td class="truncate-1" title="@d.BS_MaBacSi">@d.BS_MaBacSi</td>
                        <td class="truncate-1" title="@d.ND_HoTen">@d.ND_HoTen</td>
                        @*<td class="truncate-1 d-none d-md-table-cell" title="@d.BS_ChuyenKhoa">@d.BS_ChuyenKhoa</td>*@
                        <td class="d-none d-lg-table-cell">@d.BS_ChucDanh</td>
                        <td class="text-center d-none d-lg-table-cell">@d.BS_NamKinhNghiem</td>
                        <td class="truncate-1" title="@d.TK_UserName">@d.TK_UserName</td>

                        <td>
                            @if (d.TK_TrangThai?.ToUpper() == "ACTIVE")
                            {
                                <span class="badge bg-success px-3 py-2">ACTIVE</span>
                            }
                            else if (d.TK_TrangThai?.ToUpper() == "LOCKED")
                            {
                                <span class="badge bg-danger px-3 py-2">LOCKED</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary px-3 py-2">@d.TK_TrangThai</span>
                            }
                        </td>

                        <td class="d-none d-md-table-cell">
                            <div class="truncate-1" title="@d.ND_SoDienThoai">@d.ND_SoDienThoai</div>
                            <div class="text-muted truncate-1" title="@d.ND_Email">@d.ND_Email</div>
                        </td>

                        <td>
                            <div class="action-btns d-flex flex-wrap gap-2">

                                <!-- Nút Sửa với xác nhận -->
                                <a class="btn btn-sm btn-outline-primary" href="@Url.Action("EditDoctor","Admin", new { id = d.BS_MaBacSi })" onclick="return confirmEdit();">
                                    Sửa
                                </a>

                                <!-- Nút Khóa với xác nhận -->
                                @using (Html.BeginForm("ToggleDoctorStatus", "Admin", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@d.BS_MaBacSi" />
                                    <button class="btn btn-sm btn-outline-warning" type="submit" onclick="return confirmStatusChange();">
                                        @if (d.TK_TrangThai?.ToUpper() == "ACTIVE")
                                        {
                                            <span>Khóa</span>
                                        }
                                        else
                                        {
                                            <span>Mở</span>
                                        }
                                    </button>
                                }

                                <!-- Nút Xóa với xác nhận -->
                                @using (Html.BeginForm("DeleteDoctor", "Admin", FormMethod.Post, new { onsubmit = "return confirmDelete();" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@d.BS_MaBacSi" />
                                    <button class="btn btn-sm btn-outline-danger" type="submit">Xóa</button>
                                }

                            </div>
                        </td>

                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>
<script>
    // Xác nhận khi nhấn nút Sửa
    function confirmEdit() {
        return confirm('Bạn có chắc chắn muốn sửa thông tin bác sĩ này?');
    }

    // Xác nhận khi nhấn nút Khóa/Mở
    function confirmStatusChange() {
        return confirm('Bạn có chắc chắn muốn thay đổi trạng thái tài khoản của bác sĩ này?');
    }

    // Xác nhận khi nhấn nút Xóa
    function confirmDelete() {
        return confirm('Bạn có chắc chắn muốn xóa bác sĩ này và toàn bộ dữ liệu liên quan?');
    }

    function confirmCreateDoctor() {
        return confirm('Bạn có chắc chắn muốn tạo bác sĩ mới?');
    }
</script>
