@model IEnumerable<DangKyKhamBenh.Models.ViewModels.BacSi>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Quản lý bác sĩ";
    ViewBag.Active = "Doctors";
}

<style>
    .truncate-1 {
        max-width: 180px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Hiệu ứng hover dòng */
    table tbody tr:hover {
        background-color: #f5f7ff !important;
        transition: 0.15s;
    }

    /* Cải thiện header */
    .table th {
        background: #f0f2f5 !important;
        font-weight: 600;
    }

    .action-btns .btn {
        min-width: 68px;
    }

    .card-style {
        background: #fff;
        padding: 15px 20px;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    }
</style>

<div class="card-style mb-3">

    <!-- Header: search + create -->
    <div class="row g-3 align-items-center mb-2">
        <div class="col-md">
            <form class="d-flex flex-column flex-md-row gap-2" method="get" action="@Url.Action("Doctors","Admin")">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search"></i>
                    </span>
                    <input name="kw"
                           class="form-control border-start-0"
                           placeholder="Tìm mã BS, họ tên, username..."
                           value="@Request["kw"]" />
                    <button class="btn btn-primary px-4">Tìm</button>
                </div>
            </form>
        </div>

        <div class="col-md-auto d-grid">
            <a class="btn btn-success px-4" href="@Url.Action("CreateDoctor","Admin")">
                + Tạo bác sĩ
            </a>
        </div>
    </div>

</div>


<div class="card-style">

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th>Mã BS</th>
                    <th>Họ tên</th>
                    <th class="d-none d-md-table-cell">Chuyên khoa</th>
                    <th class="d-none d-lg-table-cell">Chức danh</th>
                    <th class="text-center d-none d-lg-table-cell">Năm KN</th>
                    <th>UserName</th>
                    <th>Trạng thái</th>
                    <th class="d-none d-md-table-cell">Liên hệ</th>
                    <th style="width:230px;">Thao tác</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var d in Model)
                {
                    <tr>
                        <td class="truncate-1" title="@d.BS_MABACSI">@d.BS_MABACSI</td>
                        <td class="truncate-1" title="@d.ND_HOTEN">@d.ND_HOTEN</td>
                        <td class="truncate-1 d-none d-md-table-cell" title="@d.BS_CHUYENKHOA">@d.BS_CHUYENKHOA</td>
                        <td class="d-none d-lg-table-cell">@d.BS_CHUCDANH</td>
                        <td class="text-center d-none d-lg-table-cell">@d.BS_NAMKINHNGHIEM</td>
                        <td class="truncate-1" title="@d.UserName">@d.UserName</td>

                        <td>
                            @if (d.TrangThai?.ToUpper() == "ACTIVE")
                            {
                                <span class="badge bg-success px-3 py-2">ACTIVE</span>
                            }
                            else if (d.TrangThai?.ToUpper() == "LOCKED")
                            {
                                <span class="badge bg-danger px-3 py-2">LOCKED</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary px-3 py-2">@d.TrangThai</span>
                            }
                        </td>

                        <td class="d-none d-md-table-cell">
                            <div class="truncate-1" title="@d.ND_SODIENTHOAI">@d.ND_SODIENTHOAI</div>
                            <div class="text-muted truncate-1" title="@d.ND_EMAIL">@d.ND_EMAIL</div>
                        </td>

                        <td>
                            <div class="action-btns d-flex flex-wrap gap-2">

                                <a class="btn btn-sm btn-outline-primary"
                                   href="@Url.Action("EditDoctor","Admin", new { id = d.BS_MABACSI })">
                                    Sửa
                                </a>

                                @using (Html.BeginForm("ToggleDoctorStatus", "Admin", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@d.BS_MABACSI" />
                                    if (d.TrangThai?.ToUpper() == "ACTIVE")
                                    {
                                        <button class="btn btn-sm btn-outline-warning" type="submit">Khóa</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-success" type="submit">Mở</button>
                                    }
                                }

                                @using (Html.BeginForm("DeleteDoctor", "Admin", FormMethod.Post,
                                    new { onsubmit = "return confirm('Bạn có chắc muốn xóa bác sĩ này?');" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@d.BS_MABACSI" />
                                    <button class="btn btn-sm btn-outline-danger" type="submit">Xóa</button>
                                }

                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>

<div class="mt-3">
    <a class="btn btn-outline-secondary" href="@Url.Action("Home","Admin")">← Quay lại</a>
</div>  