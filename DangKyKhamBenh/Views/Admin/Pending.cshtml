@model System.Data.DataTable
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Duyệt tài khoản";
}
@if (TempData["Msg"] != null)
{<div class="alert alert-success">@TempData["Msg"]</div>}
@if (TempData["Err"] != null)
{<div class="alert alert-danger">@TempData["Err"]</div>}

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Mã TK</th>
            <th>Username</th>
            <th>StaffType</th>
            <th>Role</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
            <th style="width:220px;">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow row in Model.Rows)
        {
            <tr>
                <td>@(row["TK_MaTK"])</td>
                <td>@(row["TK_UserName"])</td>
                <td>@(row["TK_StaffType"])</td>
                <td>@(row["TK_Role"])</td>
                <td>@(row["TrangThai"])</td>
                <td>@(row["TK_NgayTao"] is DBNull ? "" : Convert.ToDateTime(row["TK_NgayTao"]).ToString("dd/MM/yyyy HH:mm"))</td>
                <td>
                    <form action="/Admin/Approve" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@row["TK_MaTK"]" />
                        <button class="btn btn-sm btn-success" type="submit">Duyệt</button>
                    </form>
                    <form action="/Admin/Reject" method="post" style="display:inline" onsubmit="return confirm('Từ chối và xóa?')">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@row["TK_MaTK"]" />
                        <button class="btn btn-sm btn-danger" type="submit">Từ chối</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
