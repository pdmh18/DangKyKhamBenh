@model DangKyKhamBenh.Models.ViewModels.BacSi
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Sửa bác sĩ";
    ViewBag.Active = "CreateDoctor"; // hoặc "Doctors"
}
<div class="card shadow-sm">
    <div class="card-body">
        @using (Html.BeginForm("EditDoctor", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.MaBacSi)

            <div class="row g-3">
                <div class="col-md-6">
                    @Html.LabelFor(m => m.HoTen, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.ChuyenKhoa, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.ChuyenKhoa, new { @class = "form-control" })
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(m => m.ChucDanh, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.ChucDanh, new { @class = "form-control" })
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(m => m.NamKinhNghiem, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.NamKinhNghiem, new { @class = "form-control", type = "number", min = "0" })
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(m => m.NgaySinh, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>

                <div class="col-md-6">
                    @Html.LabelFor(m => m.SoDienThoai, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                </div>

                <div class="col-md-12">
                    @Html.LabelFor(m => m.  DiaChi, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control" })
                </div>

                <div class="col-md-6">
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName)

                </div>
                <div class="col-md-3">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Để trống nếu không đổi" })
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(m => m.TrangThai, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.TrangThai, new { @class = "form-control" })
                    
                </div>
            </div>

            <div class="mt-3">
                <button class="btn btn-primary">Lưu</button>
                <a href="@Url.Action("Home","Admin")" class="btn btn-light">Hủy</a>
            </div>
        }
    </div>
</div>
