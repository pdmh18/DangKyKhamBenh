@model DangKyKhamBenh.Models.ViewModels.BacSi
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Sửa bác sĩ";
    ViewBag.Active = "CreateDoctor"; // hoặc "Doctors"
}
<div class="card shadow-sm">
    <div class="card-body">
        @using (Html.BeginForm("EditDoctor", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.BS_MaBacSi)

        <div class="row g-3">
            <div class="col-md-6">
                @Html.LabelFor(m => m.ND_HoTen, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.ND_HoTen, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ND_HoTen, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.BS_ChuyenKhoa, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.BS_ChuyenKhoa, new { @class = "form-control" })
            </div>

            <div class="col-md-4">
                @Html.LabelFor(m => m.BS_ChucDanh, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.BS_ChucDanh, new { @class = "form-control" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(m => m.BS_NamKinhNghiem, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.BS_NamKinhNghiem, new { @class = "form-control", type = "number", min = "0" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(m => m.ND_NgaySinh, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.ND_NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>

            <div class="col-md-6">
                @Html.LabelFor(m => m.ND_SoDienThoai, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.ND_SoDienThoai, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.ND_Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.ND_Email, new { @class = "form-control", type = "email" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.ND_CCCD, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.ND_CCCD, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.ND_GioiTinh, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.ND_GioiTinh, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.ND_QuocGia, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.ND_QuocGia, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.ND_DanToc, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.ND_DanToc, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.ND_NgheNghiep, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.ND_NgheNghiep, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.ND_TinhThanh, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.ND_TinhThanh, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.ND_QuanHuyen, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.ND_QuanHuyen, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.ND_PhuongXa, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.ND_PhuongXa, new { @class = "form-control" })
            </div>
            <div class="col-md-12">
                @Html.LabelFor(m => m.ND_DiaChiThuongChu, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.ND_DiaChiThuongChu, new { @class = "form-control" })
            </div>

            <div class="col-md-6">
            @Html.LabelFor(m => m.TK_UserName)
            @Html.TextBoxFor(m => m.TK_UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.TK_UserName)

        </div>
        @*<div class="col-md-3">
            @Html.LabelFor(m => m.NewPassword, new { @class = "form-label" })
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Để trống nếu không đổi" })
        </div>*@
        <div class="col-md-3">
            @Html.LabelFor(m => m.TK_TrangThai, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.TK_TrangThai, new { @class = "form-control" })

        </div>
        </div>

            <div class="mt-3">
                <button class="btn btn-primary">Lưu</button>
                <a href="@Url.Action("Home","Admin")" class="btn btn-light">Hủy</a>
            </div>
        }
    </div>
</div>
