@model DangKyKhamBenh.Models.ViewModels.BenhNhan
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Sửa bệnh nhân";
    ViewBag.Active = "Patients";
}
<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("EditPatient", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.MaBenhNhan)

            <div class="row g-3">
                <div class="col-md-6">
                    @Html.LabelFor(m => m.HoTen, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.SoDienThoai, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.NgaySinh, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>
                <div class="col-12">
                    @Html.LabelFor(m => m.DiaChi, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control" })
                </div>

                <div class="col-md-4">
                    @Html.Label("Số BHYT", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.SoBaoHiemYT, new { @class = "form-control" })
                </div>
                <div class="col-md-4">
                    @Html.Label("Nhóm máu", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.NhomMau, new { @class = "form-control" })
                </div>
                <div class="col-md-12">
                    @Html.Label("Tiểu sử bệnh án", new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.TieuSuBenhAn, 3, 50, new { @class = "form-control" })
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button class="btn btn-primary">Lưu</button>
                <a class="btn btn-outline-secondary" href="@Url.Action("Patients","Admin")">Hủy</a>
            </div>
        }
    </div>
</div>
