@{
    Layout = null;
    var active = (ViewBag.Active as string) ?? "";
    var title = (ViewBag.Title as string) ?? "Admin";
    var user = Session["User"] as string;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin · @title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f0f2f5;
            font-family: 'Segoe UI', sans-serif;
            color: #333;
        }

        /* --- NAVBAR --- */
        .admin-navbar {
            background: #0d6efd;
            padding: 0.7rem 1rem;
            box-shadow: 0 3px 12px rgba(0,0,0,0.12);
        }

        .admin-navbar .nav-link {
            color: #e0ebff !important;
            margin-right: 8px;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .admin-navbar .nav-link:hover {
            color: #fff !important;
            background: rgba(255,255,255,0.18);
            border-radius: 8px;
            padding: 0.35rem 0.8rem;
        }

        .admin-navbar .nav-link.active {
            color: #fff !important;
            background: rgba(255,255,255,0.28);
            border-radius: 8px;
            padding: 0.35rem 0.8rem;
            box-shadow: inset 0 -2px 0 rgba(255,255,255,0.6);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.2rem;
        }

        .top-title {
            background: #fff;
            border-bottom: 1px solid #e4e7ec;
            padding: 15px 20px;
            font-size: 22px;
            font-weight: 600;
            color: #0d6efd;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
            border-radius: 0 0 10px 10px;
            margin-bottom: 20px;
        }

        /* Alerts đẹp hơn */
        .alert-success, .alert-danger {
            border-radius: 10px;
            padding: 12px 18px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            font-size: 0.95rem;
        }

        .alert-success i, .alert-danger i {
            margin-right: 6px;
        }

        /* Container content */
        .container {
            max-width: 1200px;
        }

        /* Responsive */
        media (max-width: 768px) {
            .top-title { font-size: 18px; padding: 12px 15px; }
            .admin-navbar .nav-link { margin-right: 5px; font-size: 0.92rem; }
        }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-md admin-navbar">
        <a class="navbar-brand text-white me-3" href="@Url.Action("Home","Admin")">
            <i class="fa-solid fa-gears me-1"></i> Admin Panel
        </a>

        <!-- Mobile toggle -->
        <button class="navbar-toggler bg-light p-1 px-2" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
            <i class="fa-solid fa-bars"></i>
        </button>

        <div class="collapse navbar-collapse" id="navMenu">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                <li class="nav-item">
                    <a class="nav-link @(active=="Home"?"active":"")" href="@Url.Action("Home","Admin")"><i class="fa-solid fa-house me-1"></i> Trang chủ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(active=="History"?"active":"")" href="@Url.Action("History","Admin")"><i class="fa-solid fa-clock-rotate-left me-1"></i> Lịch sử tài khoản</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(active=="CreateDoctor"?"active":"")" href="@Url.Action("CreateDoctor","Admin")"><i class="fa-solid fa-user-doctor me-1"></i> Tạo bác sĩ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(active=="Patients"?"active":"")" href="@Url.Action("Patients","Admin")"><i class="fa-solid fa-users me-1"></i> Quản lý bệnh nhân</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(active=="Doctors"?"active":"")" href="@Url.Action("Doctors","Admin")"><i class="fa-solid fa-user-doctor me-1"></i> Quản lý bác sĩ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Home")"><i class="fa-solid fa-arrow-left me-1"></i> Về website</a>
                </li>
            </ul>

            <div class="d-flex align-items-center">
                <span class="text-white small me-3 d-none d-sm-inline">👋 Xin chào, <strong>@user</strong></span>
                <a class="btn btn-outline-light btn-sm" href="@Url.Action("Logout","Account")"><i class="fa-solid fa-right-from-bracket me-1"></i> Đăng xuất</a>
            </div>
        </div>
    </nav>

    <!-- PAGE TITLE -->
    <div class="top-title">@title</div>

    <!-- PAGE CONTENT -->
    <div class="container mt-3 mb-5">
        @if (TempData["Msg"] != null)
        {
            <div class="alert alert-success"><i class="fa-solid fa-circle-check"></i> @TempData["Msg"]</div>
        }
        @if (TempData["Err"] != null)
        {
            <div class="alert alert-danger"><i class="fa-solid fa-triangle-exclamation"></i> @TempData["Err"]</div>
        }

        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
