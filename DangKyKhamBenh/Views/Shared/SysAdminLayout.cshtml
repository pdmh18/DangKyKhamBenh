@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SysAdmin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .sidebar {
            height: 100%;
            width: 250px;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
        }

            .sidebar a {
                color: white;
                padding: 10px 15px;
                display: block;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #575d63;
                }

        .content-wrapper {
            margin-left: 250px;
            padding: 20px;
        }
    </style>
</head>
<body>

    <div class="d-flex">
        <div class="sidebar">
            <h4 class="text-center text-white">SysAdmin</h4>
            <hr>
            <a href="@Url.Action("Index", "SysAdmin")">Dashboard</a>
            <a href="@Url.Action("UserRoles", "SysAdmin")">User Roles</a>
            <a href="@Url.Action("CheckUserRole", "SysAdmin")">Check User Role</a>
        </div>

        <div class="content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand" href="#">SysAdmin Dashboard</a>
            </nav>

            <div class="container mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
