@model DangKyKhamBenh.Models.ForgotPasswordOtpViewModel
@{
    Layout = null;
    ViewBag.Title = "Quên mật khẩu";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - UMC CARE</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f0f4ff;
        }

        .auth-card {
            border: none;
            border-radius: 16px;
        }

            .auth-card .card-body {
                padding: 32px;
            }

        .auth-title {
            font-weight: 700;
            margin-bottom: 8px;
        }

        .auth-sub {
            color: #6c757d;
            margin-bottom: 24px;
        }

        .form-control {
            border-radius: 8px;
            padding-left: 40px;
        }

        .position-relative .input-icon {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }

        .btn-primary {
            background-color: #0056d2;
            border: none;
            font-weight: 600;
            padding: 12px;
            border-radius: 8px;
        }

            .btn-primary:hover {
                background-color: #0041a8;
            }

        .link {
            text-decoration: none;
            color: #0056d2;
        }

            .link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card auth-card shadow p-4" style="width:100%; max-width: 420px;">
            <div class="card-body">
                <div class="text-center mb-3">
                    <img src="~/Assets/bv-dh-yduoc.png" alt="Logo" style="height:60px;" />
                </div>
                <h5 class="text-center auth-title">Quên mật khẩu</h5>
                <p class="text-center auth-sub">
                    Nhập tài khoản, email và mã OTP (sau khi được gửi đến email) để đổi mật khẩu.
                </p>

                @if (TempData["Msg"] != null)
                {
                    <div class="alert alert-success">@TempData["Msg"]</div>
                }

                @if (ViewBag.Info != null)
                {
                    <div class="alert alert-info">@ViewBag.Info</div>
                }

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3 position-relative">
                        @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                        <i class="fa-solid fa-user input-icon"></i>
                        @Html.TextBoxFor(m => m.UserName,
                            new { @class = "form-control", placeholder = "Nhập tài khoản" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3 position-relative">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                        <i class="fa-solid fa-envelope input-icon"></i>
                        @Html.TextBoxFor(m => m.Email,
                            new { @class = "form-control", placeholder = "Nhập email đã đăng ký" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    if (Model != null && Model.OtpSent)
                    {
                        <div class="mb-3 position-relative">
                            @Html.LabelFor(m => m.Otp, new { @class = "form-label" })
                            <i class="fa-solid fa-key input-icon"></i>
                            @Html.TextBoxFor(m => m.Otp,
                                new { @class = "form-control", placeholder = "Nhập mã OTP" })
                            @Html.ValidationMessageFor(m => m.Otp, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3 position-relative">
                            @Html.LabelFor(m => m.NewPassword, new { @class = "form-label" })
                            <i class="fa-solid fa-lock input-icon"></i>
                            @Html.PasswordFor(m => m.NewPassword,
                                new { @class = "form-control", placeholder = "Nhập mật khẩu mới" })
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3 position-relative">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                            <i class="fa-solid fa-lock input-icon"></i>
                            @Html.PasswordFor(m => m.ConfirmPassword,
                                new { @class = "form-control", placeholder = "Nhập lại mật khẩu mới" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    }

                    @Html.HiddenFor(m => m.OtpSent)

                    <button type="submit" class="btn btn-primary w-100">
                        @(Model != null && Model.OtpSent ? "Xác nhận đổi mật khẩu" : "Gửi mã OTP")
                    </button>

                    <div class="text-center mt-3">
                        <a class="link" href="@Url.Action("Login","Account")">Quay lại đăng nhập</a>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
