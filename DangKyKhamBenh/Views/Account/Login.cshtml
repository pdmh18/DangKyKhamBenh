@{
    Layout = null;                         // không dùng layout
    ViewBag.Title = "Login";
    var returnUrl = ViewBag.ReturnUrl as string;   // nhận returnUrl từ controller (nếu có)
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome (icon) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f0f4ff;
        }

        .auth-card {
            border: none;
            border-radius: 16px;
        }

            .auth-card .card-body {
                padding: 32px;
            }

        .auth-title {
            font-weight: 700;
            margin-bottom: 8px;
        }

        .auth-sub {
            color: #6c757d;
            margin-bottom: 24px;
        }

        .form-control {
            border-radius: 8px;
            padding-left: 40px;
        }

        .position-relative .input-icon {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }

        .btn-primary {
            background-color: #0056d2;
            border: none;
            font-weight: 600;
            padding: 12px;
            border-radius: 8px;
        }

            .btn-primary:hover {
                background-color: #0041a8;
            }

        .link {
            text-decoration: none;
            color: #0056d2;
        }

            .link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card auth-card shadow p-4" style="width:100%; max-width: 420px;">
            <div class="card-body">
                <div style="display:flex">
                    <div class="text-center mb-3">
                        <img src="~/Assets/bv-dh-yduoc.png" alt="Logo" style="height: 60px;" />
                    </div>
                    <h5 class="text-center auth-title">
                        Chào mừng bạn đến với <span style="color:#0056d2;">UMC CARE</span>
                    </h5>
                </div>

                <p class="text-center auth-sub">Vui lòng đăng nhập để tiếp tục</p>

                @if (TempData["Msg"] != null)
                {
                    <div class="alert alert-success">@TempData["Msg"]</div>
                }

                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("returnUrl", returnUrl ?? "")

                    <div class="mb-3 position-relative">
                        <label for="user" class="form-label">Tài khoản</label>
                        <i class="fa-solid fa-user input-icon"></i>
                        <input type="text" class="form-control" id="user" name="user" placeholder="Nhập tài khoản" autocomplete="username" />
                    </div>

                    <div class="mb-3 position-relative">
                        <label for="Password1" class="form-label">Mật khẩu</label>
                        <i class="fa-solid fa-lock input-icon"></i>
                        <input type="password" class="form-control" id="Password1" name="password" placeholder="Nhập mật khẩu" autocomplete="current-password" />
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="remember">
                        <label class="form-check-label" for="remember">Lưu thông tin đăng nhập</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>

                    <div class="text-center mt-3">
                        <a class="link" href="@Url.Action("ForgotPassword","Account")">Quên mật khẩu?</a>
                    </div>


                    <hr />

                    <div class="text-center">
                        <a href="@Url.Action("Register","Account")"
                           class="btn btn-outline-primary w-100"
                           style="border-radius:8px; font-weight:600;">
                            Đăng ký tài khoản mới
                        </a>
                    </div>

                    <p class="text-danger mt-3 text-center"
                       style="@(string.IsNullOrWhiteSpace(ViewBag.Error as string) ? "display:none" : "")">
                        @ViewBag.Error
                    </p>

                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
