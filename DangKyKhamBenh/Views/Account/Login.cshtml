@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>Login</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome (icon trong input) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <style>
        body {
            background: #f0f4ff; /* nền nhẹ */
        }

        .auth-card {
            border: none;
            border-radius: 16px;
        }

            .auth-card .card-body {
                padding: 32px;
            }

        .auth-title {
            font-weight: 700;
            margin-bottom: 8px;
        }

        .auth-sub {
            color: #6c757d;
            margin-bottom: 24px;
        }

        .form-control {
            border-radius: 8px;
            padding-left: 40px;
        }

        .input-icon {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }

        .btn-primary {
            background-color: #0056d2;
            border: none;
            font-weight: 600;
            padding: 12px;
            border-radius: 8px;
        }

            .btn-primary:hover {
                background-color: #0041a8;
            }

        .link {
            text-decoration: none;
            color: #0056d2;
        }

            .link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card auth-card shadow p-4" style="width:100%; max-width: 420px;">
            <div class="card-body">
                <img src="~/Assets/bv-dh-yduoc.png" alt="Logo" class="d-block mx-auto mb-4" style="height: 60px;" />
                <h3 class="text-center auth-title">
                    Chào mừng bạn đến với
                    <a style="color: blue">UMC CARE</a>
                </h3>
                <p class="text-center auth-sub">Vui lòng đăng nhập để tiếp tục</p>

                <!-- Form -->
                <form action="/Account/Login" method="post">
                    <div class="mb-3 position-relative">
                        <label for="user" class="form-label">Tài khoản</label>
                        <i class="fa-solid fa-user input-icon"></i>
                        <input type="text" class="form-control" id="user" name="user" placeholder="Nhập tài khoản">
                    </div>

                    <div class="mb-3 position-relative">
                        <label for="Password1" class="form-label">Mật khẩu</label>
                        <i class="fa-solid fa-lock input-icon"></i>
                        <input type="password" class="form-control" id="Password1" name="password" placeholder="Nhập mật khẩu">
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Lưu thông tin đăng nhập</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>

                    <div class="text-center mt-3">
                        <a href="#" class="link">Quên mật khẩu?</a>
                    </div>

                    <hr />

                    <div class="text-center">
                        <a href="@Url.Action("Register","Account")" class="btn btn-outline-primary w-100" style="border-radius:8px; font-weight:600;">
                            Đăng ký tài khoản mới
                        </a>
                    </div>

                    <p class="text-danger mt-3 text-center">@ViewBag.Error</p>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
