@model DangKyKhamBenh.Models.ViewModels.BenhNhan

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mã hóa Hồ Sơ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fb;
            font-family: Arial, sans-serif;
        }

        .form-container {
            max-width: 900px;
            margin: 40px auto;
            background: #ffffff;
            padding: 40px;
            border-radius: 18px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }

        h2 {
            color: #0d6efd;
            font-weight: 600;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        label {
            font-weight: 500;
        }

        .form-control {
            border-radius: 10px;
            padding: 10px 14px;
        }

        .btn-primary {
            background-color: #0d6efd;
            border: none;
            border-radius: 10px;
            padding: 12px 20px;
            font-weight: 500;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .result {
            padding: 15px;
            border-radius: 10px;
            margin-top: 25px;
            font-weight: 500;
        }

        .result-success {
            background-color: #d1e7dd;
            color: #0f5132;
            border: 1px solid #badbcc;
        }

        .result-error {
            background-color: #f8d7da;
            color: #842029;
            border: 1px solid #f5c2c7;
        }

        .radio-group {
            display: flex;
            gap: 20px;
            align-items: center;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2><i class="fa-solid fa-id-card"></i> Hồ Sơ Bệnh Nhân</h2>

        <form method="post" action="@Url.Action("HoSo", "HoSo")">
            <input type="hidden" name="ND_IdNguoiDung" value="@Model.ND_IdNguoiDung" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="BN_MaBenhNhan">Mã Bệnh Nhân</label>
                        <input type="text" id="BN_MaBenhNhan" name="BN_MaBenhNhan" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="BN_SoBaoHiemYT">Số Bảo Hiểm Y Tế</label>
                        <input type="text" id="BN_SoBaoHiemYT" name="BN_SoBaoHiemYT" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="ND_HoTen">Họ Tên</label>
                        <input type="text" id="ND_HoTen" name="ND_HoTen" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="ND_SoDienThoai">Số điện thoại</label>
                        <input type="number" id="ND_SoDienThoai" name="ND_SoDienThoai" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="ND_Email">Email</label>
                        <input type="email" id="ND_Email" name="ND_Email" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="ND_CCCD">CCCD</label>
                        <input type="number" id="ND_CCCD" name="ND_CCCD" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="ND_NgaySinh">Ngày Sinh</label>
                        <input type="date" id="ND_NgaySinh" name="ND_NgaySinh" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label>Giới Tính</label>
                        <div class="radio-group">
                            <div>
                                <input type="radio" id="ND_GioiTinhNam" name="ND_GioiTinh" value="Nam" required />
                                <label for="ND_GioiTinhNam">Nam</label>
                            </div>
                            <div>
                                <input type="radio" id="ND_GioiTinhNu" name="ND_GioiTinh" value="Nu" required />
                                <label for="ND_GioiTinhNu">Nữ</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="ND_QuocGia">Quốc Gia</label>
                        <input type="text" id="ND_QuocGia" name="ND_QuocGia" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="ND_DanToc">Dân Tộc</label>
                        <input type="text" id="ND_DanToc" name="ND_DanToc" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="ND_NgheNghiep">Nghề Nghiệp</label>
                        <input type="text" id="ND_NgheNghiep" name="ND_NgheNghiep" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="ND_TinhThanh">Tỉnh Thành</label>
                        <input type="text" id="ND_TinhThanh" name="ND_TinhThanh" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="ND_QuanHuyen">Quận Huyện</label>
                        <input type="text" id="ND_QuanHuyen" name="ND_QuanHuyen" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="ND_PhuongXa">Phường Xã</label>
                        <input type="text" id="ND_PhuongXa" name="ND_PhuongXa" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="ND_DiaChiThuongChu">Địa chỉ thường trú</label>
                        <input type="text" id="ND_DiaChiThuongChu" name="ND_DiaChiThuongChu" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="BN_TieuSuBenhAn">Tiểu sử bệnh án</label>
                        <input type="text" id="BN_TieuSuBenhAn" name="BN_TieuSuBenhAn" class="form-control" required />
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">
                <i class="fa-solid fa-file-medical me-1"></i> Tạo Hồ Sơ
            </button>
        </form>

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="result result-success mt-3">
                <i class="fa-solid fa-circle-check me-1"></i>
                @ViewBag.SuccessMessage
            </div>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="result result-error mt-3">
                <i class="fa-solid fa-circle-exclamation me-1"></i>
                @ViewBag.ErrorMessage
            </div>
        }

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
