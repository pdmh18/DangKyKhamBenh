@model DangKyKhamBenh.Models.ViewModels.XacNhanBHYTVM
@using System.Globalization
@{
    Layout = null;
    var vi = new CultureInfo("vi-VN");
    string ngayStr = Model.NgayKham.ToString("dd/MM/yyyy");
    string timeStr = $"{Model.GioBD} - {Model.GioKT}";
    string placeStr = $"{Model.TenPhong} - {Model.ViTri}";
    string moneyStr = $"{Model.TienKham.ToString("N0", vi)}đ";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f3f6fb;
            font-family: 'Segoe UI', sans-serif;
        }

        .page {
            max-width: 460px;
            margin: 16px auto;
            padding: 0 12px 88px;
        }

        .sum {
            background: #fff;
            border: 1px solid #dde4ef;
            border-radius: 12px;
            padding: 12px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 10px;
        }

            .sum .left {
                display: flex;
                gap: 10px;
                align-items: center;
            }

        .ico {
            width: 22px;
            height: 22px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: #0d6efd;
        }

        .check {
            width: 22px;
            height: 22px;
            border-radius: 50%;
            background: #23c16b;
            color: #fff;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-weight: 800;
        }

        .block {
            background: #fff;
            border: 1px solid #dde4ef;
            border-radius: 12px;
            padding: 12px;
        }

        .sticky {
            position: fixed;
            left: 0;
            right: 0;
            bottom: 0;
            background: #fff;
            border-top: 1px solid #e6edf7;
        }

            .sticky .wrap {
                max-width: 460px;
                margin: 0 auto;
                padding: 10px 12px;
            }

        .money {
            font-weight: 800;
            color: #0b5ed7;
        }
    </style>
</head>
<body>
    <div class="page">

        <div class="d-flex align-items-center gap-2 mb-3">
            <a href="javascript:history.back()" class="text-decoration-none fs-4">&larr;</a>
            <div class="fw-bold fs-5">Xác nhận BHYT</div>
        </div>

        <!-- 4 dòng tóm tắt như ảnh -->
        <div class="sum">
            <div class="left">
                <span class="ico">🩺</span>
                <div class="fw-semibold">@Model.TenDichVu</div>
            </div>
            <span class="check">✓</span>
        </div>

        <div class="sum">
            <div class="left">
                <span class="ico">📅</span>
                <div class="fw-semibold">@ngayStr</div>
            </div>
            <span class="check">✓</span>
        </div>

        <div class="sum">
            <div class="left">
                <span class="ico">🕘</span>
                <div class="fw-semibold">@timeStr, @placeStr</div>
            </div>
            <span class="check">✓</span>
        </div>

        <div class="sum">
            <div class="left">
                <span class="ico">👨‍⚕️</span>
                <div class="fw-semibold">BSCKI. @Model.TenBacSi</div>
            </div>
            <span class="check">✓</span>
        </div>

        @using (Html.BeginForm("XacNhanBHYT", "DangKyKham", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.SlotId)
            @Html.HiddenFor(m => m.DV_MaDichVu)
            @Html.HiddenFor(m => m.NgayKham)
            @Html.HiddenFor(m => m.TenDichVu)
            @Html.HiddenFor(m => m.TienKham)
            @Html.HiddenFor(m => m.GioBD)
            @Html.HiddenFor(m => m.GioKT)
            @Html.HiddenFor(m => m.TenPhong)
            @Html.HiddenFor(m => m.ViTri)
            @Html.HiddenFor(m => m.TenBacSi)

            <div class="block mt-3">
                <div class="fw-bold mb-2">Bảo hiểm Y tế <span class="text-danger">*</span></div>

                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="BhytCase" id="b1" value="1" @(Model.BhytCase == "1" ? "checked" : "")>
                    <label class="form-check-label" for="b1">Đăng ký KCB BHYT ban đầu tại BV ĐHYD</label>
                </div>

                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="BhytCase" id="b2" value="2" @(Model.BhytCase == "2" ? "checked" : "")>
                    <label class="form-check-label" for="b2">Có giấy chuyển BHYT đúng tuyến BV ĐHYD</label>
                </div>

                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="BhytCase" id="b3" value="3" @(Model.BhytCase == "3" ? "checked" : "")>
                    <label class="form-check-label" for="b3">Tái khám theo hẹn trên đơn thuốc BHYT của BV ĐHYD</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="BhytCase" id="b4" value="4" @(Model.BhytCase == "4" ? "checked" : "")>
                    <label class="form-check-label" for="b4">Không phải 3 trường hợp trên</label>
                </div>

                @Html.ValidationMessage("BhytCase", new { @class = "text-danger small d-block mt-2" })
            </div>

            <div class="block mt-3">
                <div class="fw-bold mb-2">Bảo lãnh viện phí <span class="text-danger">*</span></div>

                <div class="d-flex gap-4">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="BaoLanhVienPhi" id="bl1" value="true" @(Model.BaoLanhVienPhi == true ? "checked" : "")>
                        <label class="form-check-label" for="bl1">Có</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="BaoLanhVienPhi" id="bl0" value="false" @(Model.BaoLanhVienPhi == false ? "checked" : "")>
                        <label class="form-check-label" for="bl0">Không</label>
                    </div>
                </div>

                @Html.ValidationMessage("BaoLanhVienPhi", new { @class = "text-danger small d-block mt-2" })
            </div>

            <div class="sticky">
                <div class="wrap">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="text-muted fw-semibold">Tiền khám</div>
                        <div class="money">@moneyStr</div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 fw-bold" style="border-radius:12px; padding:12px;">
                        Tiếp tục
                    </button>
                </div>
            </div>
        }
    </div>
</body>
</html>
