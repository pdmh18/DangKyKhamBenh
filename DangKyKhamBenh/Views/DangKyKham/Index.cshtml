@model List<DangKyKhamBenh.Models.ViewModels.BenhNhan>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chọn hồ sơ đăng ký khám</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f5f8ff;
        }

        .header-title {
            font-weight: 700;
            font-size: 24px;
        }

        .back-btn {
            text-decoration: none;
            color: #0d6efd;
            font-weight: 500;
        }

            .back-btn i {
                margin-right: 6px;
            }

        /* CARD HỒ SƠ */
        .profile-card {
            border-radius: 16px;
            padding: 18px;
            border: 1px solid #d6e4ff;
            background: #ffffff;
            transition: 0.2s;
            box-shadow: 0 2px 6px rgba(0,0,0,0.06);
            cursor: pointer;
        }

            .profile-card:hover {
                border-color: #3b82f6;
                box-shadow: 0 4px 14px rgba(59,130,246,0.25);
                transform: translateY(-2px);
            }

        /* NÚT TẠO HỒ SƠ TRÒN */
        .add-profile-wrapper {
            display: inline-flex;
            flex-direction: column;
            align-items: center;
            text-decoration: none;
            color: #2f80ed;
            cursor: pointer;
            transition: 0.2s ease;
        }

        .add-profile-circle {
            width: 110px;
            height: 110px;
            border-radius: 50%;
            border: 3px dashed #2f80ed;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f7faff;
            transition: 0.25s ease;
        }

            .add-profile-circle i {
                font-size: 40px;
                color: #2f80ed;
            }

        .add-profile-wrapper span {
            margin-top: 10px;
            font-size: 16px;
            font-weight: 600;
        }

        .add-profile-wrapper:hover .add-profile-circle {
            background: #eaf2ff;
            transform: scale(1.06);
            border-color: #1a73e8;
        }

        .add-profile-wrapper:hover span {
            color: #1a73e8;
        }

        /* KHOẢNG CÁCH CÁC CARD */
        .card-list {
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <div class="container mt-3">

        <!-- Nút Trở lại -->
        <a href="javascript:history.back()" class="back-btn">
            <i class="fa-solid fa-arrow-left"></i> Trở lại
        </a>

        <h2 class="header-title mt-2">Chọn hồ sơ đăng ký khám</h2>

        <a href="@Url.Action("HoSo", "HoSo")" class="add-profile-wrapper mt-3">
            <div class="add-profile-circle">
                <i class="fa-solid fa-plus"></i>
            </div>
            <span>Tạo hồ sơ</span>
        </a>


        <!-- Hiển thị danh sách hồ sơ -->
        @if (Model != null && Model.Count > 0)
        {
            var hasCompleteProfile = Model.All(item =>
                !string.IsNullOrEmpty(item.BN_SoBaoHiemYT) &&
                !string.IsNullOrEmpty(item.BN_TieuSuBenhAn) &&
                !string.IsNullOrEmpty(item.ND_CCCD) &&
                !string.IsNullOrEmpty(item.ND_GioiTinh) &&
                !string.IsNullOrEmpty(item.ND_QuocGia) &&
                !string.IsNullOrEmpty(item.ND_DanToc) &&
                !string.IsNullOrEmpty(item.ND_NgheNghiep) &&
                !string.IsNullOrEmpty(item.ND_TinhThanh) &&
                !string.IsNullOrEmpty(item.ND_QuanHuyen) &&
                !string.IsNullOrEmpty(item.ND_PhuongXa));

            if (hasCompleteProfile)
            {
                <div class="card-list">
                    @foreach (var item in Model)
                    {
                        <a href="@Url.Action("ChonChuyenKhoa", "DangKyKham", new { bnId = item.BN_MaBenhNhan })"
                           class="text-decoration-none text-dark">
                            <div class="profile-card mb-3">

                                <div class="d-flex align-items-center mb-2">
                                    <i class="fa-solid fa-circle-info me-2 text-primary"></i>
                                    <strong class="fs-5">@item.ND_HoTen</strong>
                                </div>

                                <div class="d-flex justify-content-between text-secondary mt-2">
                                    <div>
                                        <i class="fa-solid fa-barcode me-2"></i>
                                        @item.BN_MaBenhNhan
                                    </div>
                                    <div>
                                        <i class="fa-solid fa-phone me-2"></i>
                                        @item.ND_SoDienThoai
                                    </div>
                                </div>

                            </div>
                        </a>
                    }
                </div>
            }
            else
            {
                <p class="mt-3 text-danger fw-bold">Bạn chưa có hồ sơ đầy đủ. Vui lòng tạo hồ sơ để đăng ký khám.</p>
            }
        }
        else
        {
            <div class="mt-3">
                <p>
                    Hiện tại bạn chưa có hồ sơ bệnh nhân.
                    <a href="@Url.Action("HoSo", "HoSo")">Tạo hồ sơ ngay</a>.
                </p>
            </div>
        }

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
