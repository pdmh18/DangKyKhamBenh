@model DangKyKhamBenh.Models.ViewModels.ChonKhungGioVM
@{
    Layout = null;
    string ngayStr = Model.NgayDangChon.ToString("dd/MM/yyyy");
    string ngayParam = Model.NgayDangChon.ToString("yyyy-MM-dd");
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #eef2f7;
            font-family: 'Segoe UI', sans-serif;
        }

        .page {
            max-width: 460px;
            margin: 18px auto;
            padding: 0 12px;
        }

        .chip {
            width: 78px;
            padding: 10px 8px;
            border-radius: 12px;
            border: 1px solid #d7dde5;
            background: #fff;
            text-align: center;
            margin-right: 10px;
        }

            .chip.active {
                border: 2px solid #0d6efd;
                color: #0d6efd;
                font-weight: 700;
            }

        .slot-btn {
            width: 100%;
            border-radius: 12px;
            padding: 14px 10px;
            background: #e9edf2;
            border: 0;
            font-weight: 600;
        }

            .slot-btn:disabled {
                opacity: .55;
            }

        .cardx {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0,0,0,.06);
            padding: 14px;
            margin-bottom: 14px;
        }

        .doctor {
            font-weight: 800;
            color: #0b5ed7;
        }

        .sub {
            color: #6c757d;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="page">
        <div class="d-flex align-items-center gap-2 mb-3">
            <a href="javascript:history.back()" class="text-decoration-none fs-4">&larr;</a>
            <div class="fw-bold fs-5">Chọn khung giờ khám</div>
        </div>

        <div class="mb-2 text-muted small">
            @Model.TenKhoa • @ngayStr
        </div>

        <!-- dải ngày -->
        <div class="d-flex overflow-auto pb-2 mb-3">
            @foreach (var d in Model.NgayCoLich)
            {
                var isActive = d.Date == Model.NgayDangChon.Date;
                <a class="text-decoration-none"
                   href="@Url.Action("ChonKhungGio","DangKyKham", new { dvId = Model.DV_MaDichVu, ngay = d.ToString("yyyy-MM-dd") })">
                    <div class="chip @(isActive ? "active" : "")">
                        <div>@d.ToString("dd/MM")</div>
                        <div class="small">@d.ToString("yyyy")</div>
                    </div>
                </a>
            }
        </div>

        @if (!Model.Cards.Any())
        {
            <div class="alert alert-warning">Ngày này chưa có lịch khám.</div>
        }
        else
        {
            <div>
                <h3>Chọn ca khám</h3>
                @*<div>
                    @foreach (var card in Model.Cards)
                    {
                        <div>
                            <h5>@card.HoTen</h5>
                            <p>Phòng khám: @card.TenPhong</p>
                            <p>Vị trí: @card.ViTri</p>
                            <p>Ca trực: @card.CaTruc</p>
                            <div>
                                @foreach (var slot in card.Slots)
                                {
                                    <div>
                                        <button>@slot.GioBD - @slot.GioKT</button>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>*@
            </div>
            foreach (var c in Model.Cards)
            {
                <div class="cardx">
                    <div class="doctor">BS. @c.HoTen</div>
                    <div class="sub">@c.TenPhong - @c.ViTri - Buổi @c.CaTruc</div>

                    <div class="mt-2 small text-success fw-semibold">
                        @ngayStr - Buổi @c.CaTruc
                    </div>

                    <div class="row g-2 mt-2">
                        @foreach (var s in c.Slots)
                        {
                            <div class="col-6">
                                <!-- TODO: đổi link này sang action xác nhận slot của bạn -->
                                <a class="text-decoration-none"
                                   href="@Url.Action("XacNhanBHYT", "DangKyKham",
                                        new { slotId = s.SlotId, dvId = Model.DV_MaDichVu, ngay = ngayParam })">
                                    <button type="button" class="slot-btn" @(s.ConCho ? "" : "disabled")>
                                        @s.GioBD - @s.GioKT
                                        <div class="small text-muted mt-1">@s.SoDaDK/@s.GioiHan</div>
                                    </button>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
</body>
</html>
