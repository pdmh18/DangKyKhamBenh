@model DangKyKhamBenh.Models.ViewModels.PhieuTongHopVM
@using System.Globalization
@{
    Layout = null;
    var vi = new CultureInfo("vi-VN");
    string ngayStr = Model.NgayKham.ToString("dd/MM/yyyy");
    string timeStr = $"{Model.GioBD} - {Model.GioKT}";
    string placeStr = $"{Model.TenPhong} - {Model.ViTri}";
    string moneyStr = $"{Model.TienKham.ToString("N0", vi)}đ";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f3f6fb;
            font-family: 'Segoe UI',sans-serif;
        }

        .page {
            max-width: 460px;
            margin: 16px auto;
            padding: 0 12px 96px;
        }

        /* Thêm màu nền cho các card */
        .cardx {
            background: #fff;
            border: 1px solid #dde4ef;
            border-radius: 14px;
            padding: 14px;
            margin-bottom: 20px;
            box-shadow: 0 4px 14px rgba(0, 0, 0, 0.1); /* Thêm bóng đổ */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            /* Hiệu ứng hover cho card */
            .cardx:hover {
                transform: translateY(-5px); /* Di chuyển card lên một chút khi hover */
                box-shadow: 0 6px 18px rgba(0, 0, 0, 0.15); /* Thêm bóng đổ khi hover */
            }

            /* Thêm màu nền cho các card tiêu đề */
            .cardx .fw-bold {
                font-size: 16px;
                font-weight: 700;
                color: #0d6efd; /* Màu xanh dương cho tiêu đề */
            }

            /* Màu nền cho các card nổi bật (success, blue, etc.) */
            .cardx.success {
                background-color: #e7f9f0; /* Nền xanh nhạt */
                border-left: 5px solid #28a745; /* Viền trái màu xanh lá */
            }

            .cardx.blue {
                background-color: #e0f7fa; /* Nền xanh biển */
                border-left: 5px solid #17a2b8; /* Viền trái màu xanh biển */
            }

            .cardx.warning {
                background-color: #fff3cd; /* Nền vàng nhạt */
                border-left: 5px solid #ffc107; /* Viền trái màu vàng */
            }

            .cardx.danger {
                background-color: #f8d7da; /* Nền đỏ nhạt */
                border-left: 5px solid #dc3545; /* Viền trái màu đỏ */
            }

        /* Định dạng các dòng thông tin trong card */
        .rowline {
            display: flex;
            justify-content: space-between;
            gap: 10px;
            padding: 10px 0;
            border-bottom: 1px dashed #e3eaf5;
        }

            .rowline:last-child {
                border-bottom: 0;
            }

        /* Định dạng các thông tin chính trong card */
        .k {
            color: #6c757d;
            font-weight: 600;
        }

        .v {
            font-weight: 700;
            text-align: right;
        }

        /* Phần badge */
        .badge-soft {
            background: #eef4ff;
            color: #0d6efd;
            font-weight: 700;
            padding: 6px 10px;
            border-radius: 999px;
        }

        /* Các phần sticky footer */
        .sticky {
            position: fixed;
            left: 0;
            right: 0;
            bottom: 0;
            background: #fff;
            border-top: 1px solid #e6edf7;
        }

            .sticky .wrap {
                max-width: 460px;
                margin: 0 auto;
                padding: 10px 12px;
            }

        /* Tiền khám */
        .money {
            font-weight: 900;
            color: #0b5ed7;
        }

    </style>
</head>
<body>
    <div class="page">
        <div class="d-flex align-items-center gap-2 mb-3">
            <a href="@Url.Action("XacNhanBHYT","DangKyKham", new { slotId = Model.SlotId, dvId = Model.DV_MaDichVu, ngay = Model.NgayKham.ToString("yyyy-MM-dd") })"
               class="text-decoration-none fs-4">&larr;</a>
            <div class="fw-bold fs-5">Phiếu tổng hợp</div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="badge-soft">Mã slot: @Model.SlotId</div>
            <div class="text-muted small">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</div>
        </div>

        <div class="cardx success mb-3">
            <div class="fw-bold mb-2">Thông tin lịch khám</div>

            <div class="rowline">
                <div class="k">Dịch vụ</div>
                <div class="v">@Model.TenDichVu</div>
            </div>
            <div class="rowline">
                <div class="k">Ngày khám</div>
                <div class="v">@ngayStr</div>
            </div>
            <div class="rowline">
                <div class="k">Khung giờ</div>
                <div class="v">@timeStr</div>
            </div>
            <div class="rowline">
                <div class="k">Phòng</div>
                <div class="v">@placeStr</div>
            </div>
            <div class="rowline">
                <div class="k">Bác sĩ</div>
                <div class="v">BSCKI. @Model.TenBacSi</div>
            </div>
        </div>

        <div class="cardx blue mb-3">
            <div class="fw-bold mb-2">Thông tin BHYT</div>

            <div class="rowline">
                <div class="k">Trường hợp BHYT</div>
                <div class="v">@Model.BhytCaseText</div>
            </div>
            <div class="rowline">
                <div class="k">Bảo lãnh viện phí</div>
                <div class="v">@Model.BaoLanhText</div>
            </div>
        </div>

        <div class="cardx warning">
            <div class="fw-bold mb-2">Thông tin người khám</div>

            <div class="rowline">
                <div class="k">Họ tên</div>
                <div class="v">@Model.HoTen</div>
            </div>
            <div class="rowline">
                <div class="k">SĐT</div>
                <div class="v">@Model.SoDienThoai</div>
            </div>
            <div class="rowline">
                <div class="k">CCCD</div>
                <div class="v">@Model.CCCD</div>
            </div>
            <div class="rowline">
                <div class="k">Số BHYT</div>
                <div class="v">@Model.SoBHYT</div>
            </div>
        </div>

        <div class="sticky">
            <div class="wrap">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="text-muted fw-semibold">Tiền khám</div>
                    <div class="money">@moneyStr</div>
                </div>

                @* nút này bạn có thể đổi sang action ghi DB thật *@
                <a class="btn btn-primary w-100 fw-bold" style="border-radius:12px; padding:12px;"
                   href="@Url.Action("ChonThanhToan","DangKyKham",
                     new { slotId = Model.SlotId, dvId = Model.DV_MaDichVu, ngay = Model.NgayKham.ToString("yyyy-MM-dd") })">
                    Xác nhận
                </a>

            </div>
        </div>
    </div>
</body>
</html>
